<form method="post" action="{{ path('group_delete', {'id': group.id}) }}" onsubmit="return confirm('Êtez-vous sûre de vouloir supprimer cette entrée ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ group.id) }}">
    <button class="trash"><i class="fas fa-trash"></i></button>
</form>
