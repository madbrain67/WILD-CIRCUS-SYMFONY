{% extends 'base.html.twig' %}

{% block title %}{% endblock %}
{% block metaDesc %}{% endblock %}
{% block metaKey %}{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-6 offset-md-3 offset-lg-3 offset-xl-3">
            <div class="container container-grey">
                <div class="row">
                    <div class="col-12 text-center pt-5">
                        <h2>{{ 'REGISTRATION'|trans|raw }}</h2>
                        <p></p>
                    </div>
                    <div class="col-12 mt-1 mb-5 p-5">
                        {{ form_start(form) }}
                        {{ form_widget(form) }}
                        <button type="submit" class="btn btn-primary">{{ 'REGISTER'|trans|raw }}</button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block js %}
<script>
$(document).on('change', '.custom-file-input', function () {
    let fileName = $(this).val().replace(/\\/g, '/').replace(/.*\//, '');
    $(this).parent('.custom-file').find('.custom-file-label').text(fileName);
});
</script>
{% endblock %}